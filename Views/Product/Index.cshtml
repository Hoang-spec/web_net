@model IEnumerable<Products.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 animate-up">
                <div class="hero-content">
                    <h1 class="hero-title">Khám Phá Thế Giới <span class="highlight">Mua Sắm</span></h1>
                    <p class="hero-subtitle">Tìm kiếm sản phẩm chất lượng với giá tốt nhất</p>
                    <div class="hero-search">
                        <form class="search-form">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Bạn đang tìm kiếm gì?">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 animate-up delay-1">
                <div class="hero-image-container">
                    <div class="hero-image-wrapper">
                        <img src="https://wallpapercave.com/wp/wp2855649.jpg" alt="Hero Image" class="hero-image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    var displayedCategoryIds = new HashSet<int>();
}
<h2 style="width: 90%; margin: auto">Danh mục sản phẩm</h2>
<div class="danhmuc">
    @foreach (var item in Model)
    {
        if (item.Category != null && !displayedCategoryIds.Contains(item.Category.Id))
        {
            displayedCategoryIds.Add(item.Category.Id);
            <div class="cate">
                <div class="lo">
                    <img src="@(item.Category.Logo ?? "/images/default-category.png")" alt="@item.Category.Name">
                </div>
                <div class="cate_text">
                    <h3>@item.Category.Name</h3>
                    <p>Sản phẩm được sản xuất tại Việt Nam</p>
                </div>
            </div>
        }
    }
</div>

<section class="special-offer-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 animate-up">
                <div class="special-offer-content">
                    <h2>Ưu Đãi Đặc Biệt</h2>
                    <h3>Giảm Giá Lên Đến 50%</h3>
                    <a href="@Url.Action("Detail", "Product", new { id = 1 })" class="btn btn-light">Mua Ngay</a>
                </div>
            </div>
            <div class="col-lg-6 animate-up delay-1">
                <div class="special-offer-image">
                    <img src="https://th.bing.com/th/id/OIP.dVfQHhHhcofBX-oVT-6ROwHaEK?r=0&rs=1&pid=ImgDetMain" alt="Special Offer" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>

<div class="product-grid">
    <div class="themmoi">
        <h2>Danh sách sản phẩm</h2>
        <p>Sản phẩm được nhiều người ưa chuộng nhờ tính năng nổi bật, độ bền cao và thiết kế hiện đại. Không chỉ đáp ứng nhu cầu hằng ngày, sản phẩm còn mang lại trải nghiệm tiện lợi, thoải mái và đảm bảo an toàn cho sức khỏe.</p>
    </div>
            @foreach(var product in Model)
            {
                <div class="product-item">
                    <a style="text-decoration: none;" asp-controller="Product" asp-action="Detailss" asp-route-id="@product.Id"> 
                    <img src="@product.Image" alt="@product.Name" />

                    <h3>@product.Name</h3>
                    <p class="description">@product.Description</p>
                    <p>Giá: @product.Price.ToString("N0") VNĐ</p>
                    </a>
                    @* <a asp-action="Delete" asp-route-id="@product.Id" class="btn-danger">Delete</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn-danger">Edit</a> *@

                </div>
            }
        </div>


@model Products.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}
<h2>Xóa sản phẩm</h2>
<h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("N0") VNĐ</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div> 